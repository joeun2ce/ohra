# Application Mode
OHRA_MODE=DEVELOPMENT

# Database Configuration
OHRA_DB__URL=sqlite+aiosqlite:///./data/database.db
OHRA_DB__ECHO=false

# Session Configuration
OHRA_SESSION__SECRET_KEY=your-secret-key-here

# CORS Configuration
OHRA_CORS__ALLOW_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# FastAPI Configuration
OHRA_FASTAPI__TITLE="ohra API"
OHRA_FASTAPI__DESCRIPTION="short description of project"

# Cache Configuration
OHRA_CACHE__BACKEND_URL=redis://localhost:6379/0
OHRA_CACHE__ENABLE=true
